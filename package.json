{
  "name": "@banou/media-player",
  "version": "0.4.0",
  "description": "",
  "type": "module",
  "main": "build/index.js",
  "files": [
    "build",
    "tsconfig.json",
    "tsconfig.node.json",
    "src"
  ],
  "scripts": {
    "dev": "vite --port 4560",
    "build-dev": "vite build --watch",
    "build": "vite build && npm run types",
    "build-for-dev": "vite build && npm run copy-dependencies && npm run types",
    "copy-dependencies": "npm run copy-libass && npm run copy-worker && npm run copy-worker-wasm",
    "copy-worker": "shx cp node_modules/libav-wasm/build/worker.js build/libav.js",
    "copy-worker-wasm": "shx cp node_modules/libav-wasm/build/libav.wasm build/libav.wasm",
    "copy-libass": "copyfiles -u 3 ./node_modules/jassub/dist/* build",
    "types": "tsc"
  },
  "author": "Banou26",
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^7.6.0",
    "copyfiles": "^2.4.1",
    "mime": "^3.0.0",
    "shx": "^0.3.4",
    "typescript": "^5.8.2",
    "vite": "^6.2.1"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@xstate/react": "^5.0.1",
    "ass-compiler": "^0.1.15",
    "jassub": "^1.7.18",
    "libav-wasm": "^0.5.3",
    "osra": "^0.1.2",
    "p-queue": "^7.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-feather": "^2.0.10",
    "react-tooltip": "^5.28.0",
    "xstate": "^5.19.1"
  }
}
